{% comment %}
Returns "Firstname Lastname" and removes trailing "."
{% endcomment %}

{%- if person.full_name -%}
  {% assign name = person.full_name %}
{%- else -%}
  {% assign name = person.first_name %}
  {% assign name = name | append: person.last_name | join(" ") %}
{%- endif -%}
{% if name.last == '.' %}
  {% assign size = name | size | minus: 1 %}
  {% name = name | slice: 0, size %}
{% endif %}

{{ name }}