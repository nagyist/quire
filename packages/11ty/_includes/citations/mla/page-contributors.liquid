{% if contributor %}
  {%- assign contributorCount = contributor | size -%}
  {%- for item in contributor -%}
    {%- if contributorCount == 1 and forloop.first == true -%}
      {% render "citation/contrib-name-reverse-last", author: item %}
      {%- elsif forloop.first == true -%}
      {% render "citation/contrib-name-reverse", author: item %}
      {%- else -%}
      {%- if contributorCount == 2 %}, and {% render "contrib-name-last", contributor: item %}{% endif -%}
    {%- endif -%}
  {%- endfor -%}
  {%- if contributorCount > 2 %}, et al{% endif -%}
{% endif %}