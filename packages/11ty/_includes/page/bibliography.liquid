{%- if page.citations -%}
  <div class="quire-page__content__references backmatter">
    {%- if config.params.biblioHeading -%}
      <h2 id="{{ config.params.biblioHeading | slugify }}">{{ config.params.biblioHeading }}</h2>
    {%- endif -%}
    {%- if config.params.displayBiblioShort == true -%}
      <dl>
        {%- for citation in page.citations | sort: 'sort, full' -%}
          <dt><span id="{{ citation.id | slugify }}">{{ citation.short | markdownify }}</span></dt>
          <dd>{{ citation.full | markdownify }}</dd>
        {%- endfor -%}
      </dl>
    {%- else -%}
      <ul>
        {%- for citation in page.citations | sort -%}
          <li id="{{ citation.id | slugify }}">
          {%- if citation.full %}{{ citation.full | markdownify }}{% endif -%}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
{%- endif -%}
