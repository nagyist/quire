---
class: quire-page
layout: base.11ty.js
description: Single page default template
---

{% if page_bibliography %}
  {% assign biblio = page_bibliography %}
{% else %}
  {% assign biblio = config.params.pageBibliography %}
{% endif %}

{% pageHeader
  contributor_byline=contributor_byline,
  image=image,
  label=label,
  pageContributors=pageContributors,
  subtitle=subtitle,
  title=title
%}
{% if content %}
<section class="section quire-page__content">
  <div class="container">
    <div class="content">
      {{ content }}
      {% if biblio != false %}
        {% bibliography pageReferences %}
      {% endif %}
    </div>
  </div>
</section>
{% endif %}
<section class="section quire-page__content">
  <div class="container">
    {% pageButtons pagination=pagination %}
  </div>
</section>
