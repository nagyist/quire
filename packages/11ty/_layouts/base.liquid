<!doctype html>
<html lang="{{ meta.language }}">
  {% render 'head' %}
  <body>
    {% render 'icons.html' %}

    {% if site.params.licenseIcons %}
      {% render 'icons-cc.html' %}
    {% endif %}

    {% if site.params.pdf %}
      {% render 'pdf-info' %}
    {% endif %}

    <div class="quire no-js" id="container">
      <div
        class="quire__secondary remove-from-epub"
        id="site-menu"
        aria-expanded="false"
        role="contentinfo"
      >
        {% comment %}
          TODO: replace menu partial with  11ty navigation or refactor as liquid template
        {% endcomment %}

        {% comment %}
          {% render 'menu' %}
        {% endcomment %}
      </div>

      <div class="quire__primary" id="{{ section }}">
        {% comment %}
          TODO: replace navbar partial with  11ty navigation or refactor as liquid template
        {% endcomment %}

        {% comment %}
          {% render 'navbar' %}
        {% endcomment %}
        {{ content }}
      </div>

        {% comment %}
          TODO: replace search or refactor as liquid template
        {% endcomment %}

        {% comment %}
          {% render 'search' %}
        {% endcomment %}

    </div>
    {% render 'scripts' %}
  </body>
</html>

