<!doctype html>
<html lang="{{ meta.language }}">
  {% render 'head' %}
  <body>
    {% render 'icons' %}

    {% if site.params.licenseIcons %}
      {% render 'icons-cc' %}
    {% endif %}

    {% if site.params.pdf %}
      {% render 'pdf-info' %}
    {% endif %}

    <div class="quire no-js" id="container">
      <div
        class="quire__secondary remove-from-epub"
        id="site-menu"
        aria-expanded="false"
        role="contentinfo"
      >
        {% render 'menu' %}
      </div>

      <div class="quire__primary" id="{{ section }}">
        {% render 'navbar' %}
        {{ content }}
      </div>

      {% render 'search' %}

    </div>
    {% render 'scripts' %}
  </body>
</html>

